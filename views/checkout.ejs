<%- include ('partials/top') %>
  <div class="row space">
    <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
      <h3 class="title">Check Outs</h3>
    </div>
  </div>

  <div class="row space">
    
    <div class="col-12">
      <h4 class="font-weight-light text-center text-white bg-primary p-2 m-0 table-top">List of Hotel Check Outs</h4>
      <table class="table table-striped">
        <thead class="font-weight-bold">
          <tr>
            <th>Guest Name</th>
            <th>Contact Phone</th>
            <th>Room Number</th>
            <th>Room Type</th>
            <th>Check In Date</th>
            <th>Check Out Date</th>
            <th>Total Cost (&#8358;)</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% checkouts.forEach((m) => { %>
            <tr>
              <td><small><%= m.guest.name %></small></td>
              <td><small><%= m.guest.phone %></small></td>
              <td><small><%= m.room.room_number %></small></td>
              <td><small><%= m.room.room_type %></small></td>
              <td><small><%= m.check_in_date.toGMTString() %></small></td>
              <td><small><%= m.check_out_date.toGMTString() %></small></td>
              <td><small><%= m.total_room_cost %></small></td>
              <td>
                <a href='<%= "/checkins/remove/" + m._id %>' class="btn btn-sm btn-danger">Remove</a>
              </td>
            </tr>
          <% }) %>          
        </tbody>
      </table>
    </div>
  </div>
</main>
</div>
</div> 


<%- include ('partials/bottom') %>