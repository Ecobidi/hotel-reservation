<%- include ('partials/top') %>
  <div class="row space">
    <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
      <h3 class="title">Hotel Guests</h3>
      <div>
        <a href="/rooms/available" class="btn btn-primary">Add New Guest</a>
      </div>
    </div>
  </div>

  <div class="row space">
    
    <div class="col-12">
      <form id="search-form" method="GET" action="/guests?" class="form-inline">
        <div class="form-group mb-4">
          <input required type="text" name="search" id="search-box" class="form-control" placeholder="Search ...">
          <button type="submit" class="btn btn-primary">Search</button>
        </div>
      </form>
      <h4 class="font-weight-light text-center text-white bg-primary p-2 m-0 table-top">List of Hotel Guests</h4>
      <table class="table table-bordered table-striped">
        <thead class="font-weight-bold">
          <tr>
            <td>#</td>
            <td>Guest Name</td>
            <td>Phone</td>
            <td>Address</td>
            <td>Type of ID</td>
            <td>ID Number</td>
            <td>Date Checked In</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% guests.forEach((m) => { %>
            <tr>
              <td><%= m.serial_number %></td>
              <td><small><%= m.name %></small></td>
              <td><small><%= m.phone %></small></td>
              <td><small><%= m.address %></small></td>
              <td><small><%= m.id_card_type %></small></td>
              <td><small><%= m.id_card_number %></small></td>
              <td><small><%= m.date_of_check_in.toGMTString() %></small></td>
              <td>
                <a href='<%= "/guests/remove/" + m._id %>' class="btn btn-sm btn-danger">Remove</a>
              </td>
            </tr>
          <% }) %>          
        </tbody>
      </table>
    </div>
  </div>
</main>
</div>
</div> 


<%- include ('partials/bottom') %>