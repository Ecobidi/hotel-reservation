<%- include ('partials/top') %>
  <div class="row space">
    <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
      <h3 class="title">Reservation</h3>
    </div>
  </div>

  <div class="row space">
    <div class="col-12">
      <% if (error_msg && error_msg.length > 0) { %>
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <strong><%= error_msg %></strong> 
        </div>
        <script>
          $(".alert").alert();
        </script>
      <% } %>
      <% if (success_msg && success_msg.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <strong><%= success_msg %></strong> 
        </div>
        <script>
          $(".alert").alert();
        </script>
      <% } %>
    </div>
    <div class="col-12">
      <form id="search-form" method="GET" action="/reservations?" class="form-inline">
        <div class="form-group mb-4">
          <input required type="text" name="search" id="search-box" class="form-control" placeholder="Search by customer name ...">
          <button type="submit" class="btn btn-primary">Search</button>
        </div>
      </form>
      
      <table class="table table-striped">
        <thead class="font-weight-bold">
          <tr>
            <th>#</th>
            <th>Customer Name</th>
            <th>Customer Phone</th>
            <th>Time of Reservation</th>
            <th>Room Type</th>
            <th>Est. CheckIn Time</th>
            <th>Est. CheckOut Time</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% reservations.forEach((m) => { %>
            <tr>
              <td><%= m.serial_number %></td>
              <td><span><%= m.customer_name %></span></td>
              <td><small><%= m.customer_phone %></small></td>
              <td><small><%= m.time_of_reservation.toLocaleString() %></small></td>
              <td><small><%= m.room_type %></small></td>
              <td><small><%= m.check_in_date.toLocaleString() %></small></td>
              <td><small><%= m.check_out_date.toLocaleString() %></small></td>
              <td> 
                <a href='<%= "/reservations?reservation_id=" + m._id %>' class="btn btn-sm btn-outline-danger"><i class="fa fa-times-circle-o" aria-hidden="true"></i></a>
              </td>
            </tr>
          <% }) %>          
        </tbody>
      </table>
    </div>
  </div>
</main>
</div>
</div> 


<%- include ('partials/bottom') %>